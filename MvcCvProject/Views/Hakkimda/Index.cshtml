@using MvcCvProject.Models.Entity
@model List<TblHakkimda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hakkımda Düzenleme Sayfası</h2>
<br />

<form method="post">
    @foreach (var item in Model)
    {
        <label>Ad</label>
        <input type="text" name="Ad" value="@item.Ad" class="form-control" required />
        <br />

        <label>Soyad</label>
        <input type="text" name="Soyad" value="@item.Soyad" class="form-control" required />
        <br />

        <label>Adres</label>
        <input type="text" name="Adres" value="@item.Adres" class="form-control" required />
        <br />

        <label>Telefon</label>
        <input type="text" name="Telefon" value="@item.Telefon" class="form-control" required />
        <br />

        <label>Mail</label>
        <input type="email" name="Mail" value="@item.Mail" class="form-control" required />
        <br />

        <label>Açıklama</label>
        <textarea name="Aciklama" rows="5" class="form-control" required>@item.Aciklama</textarea>
        <br />

        <label>Resim</label>
        <input type="text" name="Resim" value="@item.Resim" class="form-control" required />
        <br />

        <button class="btn btn-success">Düzenle</button>
    }
</form>