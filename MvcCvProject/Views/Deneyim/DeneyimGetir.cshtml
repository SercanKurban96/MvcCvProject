@model MvcCvProject.Models.Entity.TblDeneyimlerim

@{
    ViewBag.Title = "DeneyimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Deneyim Düzenleme Sayfası</h4>
<br />

<form method="post">
    @*@Html.Label("Deneyim ID")*@
    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
    <br />

    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />

    @Html.Label("Alt Başlık")
    @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control" })
    <br />

    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />

    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Düzenle</button>

</form>