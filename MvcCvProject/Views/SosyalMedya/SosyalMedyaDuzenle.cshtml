@model MvcCvProject.Models.Entity.TblSosyalMedya

@{
    ViewBag.Title = "SosyalMedyaDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Sosyal Medya Düzenleme Sayfası</h4>
<br />

<form method="post">
    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
    <br />

    @Html.Label("Sosyal Medya İsmi")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />

    @Html.Label("Sosyal Medya Linki")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />

    @Html.Label("İkon Değeri")
    @Html.TextBoxFor(x => x.Ikon, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Düzenle</button>

</form>